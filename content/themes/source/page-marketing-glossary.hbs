        }
        
        // Load More button
        const loadMoreBtn = document.getElementById('load-more-btn');
        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', () => {
                console.log('üìÑ Load More button clicked');
                this.loadMoreTerms();
            });
        }
        
        console.log('üéâ Event listeners setup complete');
    }
    
    filterTerms() {
        const searchInput = document.getElementById('glossary-search');
        const categoryFilter = document.getElementById('category-filter');
        const activeLetterBtn = document.querySelector('.alphabet-btn.active');
        
        const searchTerm = searchInput ? searchInput.value.toLowerCase().trim() : '';
        const selectedCategory = categoryFilter ? categoryFilter.value : '';
        const selectedLetter = activeLetterBtn ? activeLetterBtn.dataset.letter || '' : '';
        
        console.log('üîç Filtering with:');
        console.log('  Search term:', searchTerm);
        console.log('  Selected category:', selectedCategory);
        console.log('  Selected letter:', selectedLetter);
        console.log('  Total terms before filter:', this.terms.length);
        
        this.filteredTerms = this.terms.filter(term => {
            const matchesSearch = !searchTerm || 
                term.name.toLowerCase().includes(searchTerm) || 
                term.definition.toLowerCase().includes(searchTerm) ||
                (term.useCase && term.useCase.toLowerCase().includes(searchTerm)) ||
                (term.category && term.category.toLowerCase().includes(searchTerm));
            
            const matchesCategory = !selectedCategory || term.category === selectedCategory;
            
            const matchesLetter = !selectedLetter || 
                term.name.charAt(0).toUpperCase() === selectedLetter;
            
            return matchesSearch && matchesCategory && matchesLetter;
        });
        
        // Shuffle filtered results for variety
        this.shuffleArray(this.filteredTerms);
        
        // Reset pagination
        this.currentPage = 0;
        this.displayedTerms = [];
        
        console.log('  Filtered terms:', this.filteredTerms.length);
        
        this.renderTerms();
    }
    
    renderTerms() {
        const grid = document.getElementById('glossary-grid');
        const resultsCount = document.getElementById('results-count');
        const noResults = document.getElementById('no-results');
        const loadMoreContainer = document.querySelector('.load-more-container');
        const loadedCountEl = document.getElementById('loaded-count');
        
        resultsCount.textContent = `${this.filteredTerms.length} ${this.filteredTerms.length === 1 ? 'term' : 'terms'} found`;
        
        if (this.filteredTerms.length === 0) {
            grid.innerHTML = '';
            noResults.style.display = 'block';
            loadMoreContainer.style.display = 'none';
            return;
        }
        
        noResults.style.display = 'none';
        
        // If this is a fresh render (not load more), clear the grid
        if (this.currentPage === 0) {
            grid.innerHTML = '';
            this.displayedTerms = [];
        }
        
        // Calculate which terms to show
        const startIndex = this.currentPage * this.pageSize;
        const endIndex = Math.min(startIndex + this.pageSize, this.filteredTerms.length);
        const termsToAdd = this.filteredTerms.slice(startIndex, endIndex);
        
        // Add new terms to displayed terms
        this.displayedTerms = this.displayedTerms.concat(termsToAdd);
        
        const previewLength = this.config.ui?.previewLength || 120;
        
        // Create cards with staggered animation for new terms only
        termsToAdd.forEach((term, index) => {
            const card = document.createElement('article');
            card.className = 'glossary-term';
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            card.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
            card.style.transitionDelay = `${index * 0.1}s`;
            
            const categoryBadge = term.category ? 
                `<span class="term-category" style="background: ${this.getCategoryColor(term.category, term.categoryColor)}; margin-right: 8px;">${this.escapeHtml(term.category)}</span>` : '';
            
            const definition = this.truncateText(this.escapeHtml(term.definition), previewLength);
            
            card.innerHTML = `
                <div class="gh-skill-content">
                    <h3 class="term-title">${this.escapeHtml(term.name)}</h3>
                    <div class="term-badges">
                        ${categoryBadge}
                    </div>
                    <p class="term-definition">${definition}</p>
                    <a href="#" class="term-read-more" data-term-id="${term.id}">
                        Read full definition
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 12h14"></path>
                            <path d="M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            `;
            
            // Add click handler for modal (entire card except CTA)
            card.addEventListener('click', (e) => {
                // Don't trigger modal if clicking the CTA button
                if (e.target.closest('.term-read-more')) {
                    return;
                }
                this.showTermModal(term.id);
            });
            
            // Add specific click handler for CTA
            const ctaButton = card.querySelector('.term-read-more');
            ctaButton.addEventListener('click', (e) => {
                e.preventDefault();
                e.stopPropagation();
                this.showTermModal(term.id);
            });
            
            grid.appendChild(card);
            
            // Trigger animation
            setTimeout(() => {
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 50 + (index * 100));
        });
        
        // Update pagination info
        this.currentPage++;
        const hasMore = this.displayedTerms.length < this.filteredTerms.length;
        
        // Update load more button state
        if (hasMore) {
            loadMoreContainer.style.display = 'block';
            document.getElementById('load-more-btn').disabled = false;
            document.querySelector('.load-more-text').textContent = 'Load More Terms';
        } else {
            loadMoreContainer.style.display = this.displayedTerms.length > this.pageSize ? 'block' : 'none';
            if (loadMoreContainer.style.display === 'block') {
                document.getElementById('load-more-btn').disabled = true;
                document.querySelector('.load-more-text').textContent = 'All Terms Loaded';
            }
        }
        
        // Update loaded count
        if (loadedCountEl) {
            loadedCountEl.textContent = this.displayedTerms.length;
        }
        
        // Add search result highlighting if there's a search term
        const searchInput = document.getElementById('glossary-search');
        if (searchInput) {
            const searchTerm = searchInput.value.toLowerCase();
            if (searchTerm) {
                this.highlightSearchTerms(searchTerm);
            }
        }
    }
    
    loadMoreTerms() {
        if (this.isLoading) return;
        
        this.isLoading = true;
        const loadMoreBtn = document.getElementById('load-more-btn');
        const loadMoreText = document.querySelector('.load-more-text');
        const loadMoreSpinner = document.querySelector('.load-more-spinner');
        
        // Show loading state
        loadMoreBtn.disabled = true;
        loadMoreText.style.display = 'none';
        loadMoreSpinner.style.display = 'block';
        
        // Simulate a brief loading delay for better UX
        setTimeout(() => {
            this.renderTerms();
            
            // Hide loading state
            this.isLoading = false;
            loadMoreText.style.display = 'block';
            loadMoreSpinner.style.display = 'none';
        }, 500);
    }
    
    highlightSearchTerms(searchTerm) {
        const cards = document.querySelectorAll('.glossary-term');
        cards.forEach(card => {
            const title = card.querySelector('.term-title');
            const definition = card.querySelector('.term-definition');
            
            if (title) {
                title.innerHTML = this.highlightText(title.textContent, searchTerm);
            }
            if (definition) {
                definition.innerHTML = this.highlightText(definition.textContent, searchTerm);
            }
        });
    }
    
    highlightText(text, searchTerm) {
        if (!searchTerm) return this.escapeHtml(text);
        
        const regex = new RegExp(`(${this.escapeRegex(searchTerm)})`, 'gi');
        return this.escapeHtml(text).replace(regex, '<mark style="background: rgba(255, 235, 59, 0.6); padding: 2px 4px; border-radius: 3px; font-weight: 600;">$1</mark>');
    }
    
    escapeRegex(string) {
        return string.replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
    }
    
    showTermModal(termId) {
        if (this.config.ui?.enableModal === false) return;
        
        const term = this.terms.find(t => t.id === termId);
        if (!term) return;
        
        // Update URL for this term
        this.updateUrlForTerm(term);
        
        const modal = document.getElementById('term-modal');
        const body = modal.querySelector('.term-modal-body');
        
        const categoryBadge = term.category ? 
            `<span class="term-category" style="background: ${this.getCategoryColor(term.category, term.categoryColor)}; margin-right: 8px;">${this.escapeHtml(term.category)}</span>` : '';
        
        body.innerHTML = `
            <header style="margin-bottom: 2rem;">
                <h2 style="color: var(--glossary-primary); margin-bottom: 1rem; font-size: 2rem;">${this.escapeHtml(term.name)}</h2>
                <div style="margin-bottom: 1.5rem;" role="group" aria-label="Term categories">
                    ${categoryBadge}
                </div>
                <div style="margin-bottom: 1.5rem;">
                    <button id="copy-term-url" class="copy-url-btn" data-url="${this.getTermUrl(term)}" title="Copy direct link to this term">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
                            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.72-1.71"></path>
                        </svg>
                        <span class="copy-text">Copy Link</span>
                        <span class="copy-success" style="display: none;">Copied!</span>
                    </button>
                </div>
            </header>
            <main>
                <section style="margin-bottom: 2rem;" aria-labelledby="definition-heading">
                    <h3 id="definition-heading" style="color: var(--glossary-text); margin-bottom: 0.75rem; font-size: 1.3rem; font-weight: 600;">Definition:</h3>
                    <div style="line-height: 1.8; font-size: 1.1rem; color: var(--glossary-text);">
                        ${this.formatDefinition(term.definition)}
                    </div>
                </section>
                ${term.useCase ? `
                    <section style="margin-bottom: 2rem;" aria-labelledby="usecase-heading">
                        <h3 id="usecase-heading" style="color: var(--glossary-text); margin-bottom: 0.75rem; font-size: 1.3rem; font-weight: 600;">Use Case Example:</h3>
                        <div style="line-height: 1.8; font-size: 1.1rem; color: var(--glossary-text); background: rgba(59, 130, 246, 0.05); padding: 1.5rem; border-left: 4px solid var(--ghost-accent-color, #3366ff);">
                            ${this.formatDefinition(term.useCase)}
                        </div>
                    </section>
                ` : ''}
                ${term.tags.length > 0 ? `
                    <section style="margin-top: 2rem; padding-top: 1.5rem; border-top: 1px solid var(--glossary-border);" aria-labelledby="tags-heading">
                        <h3 id="tags-heading" style="color: var(--glossary-text); margin-bottom: 0.75rem; font-size: 1.3rem; font-weight: 600;">Related Tags:</h3>
                        <div style="display: flex; flex-wrap: wrap; gap: 0.5rem;" role="list">
                            ${term.tags.map(tag => `<span role="listitem" style="background: var(--glossary-secondary); padding: 4px 8px; font-size: 0.9rem;">${this.escapeHtml(tag)}</span>`).join('')}
                        </div>
                    </section>
                ` : ''}
            </main>
        `;
        
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
        
        // Set up copy URL functionality
        const copyBtn = modal.querySelector('#copy-term-url');
        if (copyBtn) {
            copyBtn.addEventListener('click', async () => {
                const url = copyBtn.dataset.url;
                const copyText = copyBtn.querySelector('.copy-text');
                const copySuccess = copyBtn.querySelector('.copy-success');
                
                try {
                    await navigator.clipboard.writeText(url);
                    copyText.style.display = 'none';
                    copySuccess.style.display = 'inline';
                    
                    setTimeout(() => {
                        copyText.style.display = 'inline';
                        copySuccess.style.display = 'none';
                    }, 2000);
                } catch (error) {
                    console.error('Failed to copy URL:', error);
                    // Fallback for older browsers
                    const textArea = document.createElement('textarea');
                    textArea.value = url;
                    document.body.appendChild(textArea);
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                    
                    copyText.style.display = 'none';
                    copySuccess.style.display = 'inline';
                    
                    setTimeout(() => {
                        copyText.style.display = 'inline';
                        copySuccess.style.display = 'none';
                    }, 2000);
                }
            });
        }
    }
    
    closeModal() {
        const modal = document.getElementById('term-modal');
        modal.style.display = 'none';
        document.body.style.overflow = 'auto';
        
        // Reset URL to base glossary page
        this.resetUrl();
    }
    
    formatDefinition(text) {
        return text.replace(/\n/g, '<br>');
    }
    
    truncateText(text, length) {
        if (text.length <= length) return text;
        return text.substr(0, length) + '...';
    }
    
    escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }
    
    showLoading() {
        document.getElementById('loading-state').style.display = 'block';
        document.getElementById('error-state').style.display = 'none';
        document.querySelector('.glossary-results').style.display = 'none';
    }
    
    hideLoading() {
        document.getElementById('loading-state').style.display = 'none';
        document.querySelector('.glossary-results').style.display = 'block';
    }
    
    showError(message) {
        document.getElementById('loading-state').style.display = 'none';
        document.getElementById('error-state').style.display = 'block';
        document.querySelector('.glossary-results').style.display = 'none';
        
        const errorState = document.getElementById('error-state');
        const errorMessage = errorState.querySelector('p');
        if (errorMessage) {
            errorMessage.textContent = message;
        }
    }
    
    hideError() {
        document.getElementById('error-state').style.display = 'none';
    }
    
    // Generate URL-friendly slug from term name
    generateSlug(termName) {
        return termName
            .toLowerCase()
            .replace(/[^a-z0-9\s-]/g, '') // Remove special characters
            .replace(/\s+/g, '-') // Replace spaces with hyphens
            .replace(/-+/g, '-') // Remove multiple consecutive hyphens
            .trim();
    }
    
    // Set up URL routing for individual terms
    setupUrlRouting() {
        // Using hash-based routing (e.g., /marketing-glossary#digital-activism)
        // This avoids 404s since the base page always exists and hash changes
        // are handled client-side without server requests
        
        // Handle browser back/forward navigation
        window.addEventListener('popstate', (e) => {
            this.handleHashChange();
        });
        
        // Handle hash changes
        window.addEventListener('hashchange', (e) => {
            this.handleHashChange();
        });
        
        // Set up initial URL mapping when terms are loaded
        this.buildUrlMapping();
    }
    
    // Handle hash changes for routing
    handleHashChange() {
        const hash = window.location.hash.substring(1); // Remove the #
        if (hash && this.urlMapping.has(hash)) {
            this.openTermBySlug(hash);
        } else if (!hash) {
            this.closeModal();
        }
    }
    
    // Build mapping between URL slugs and term IDs
    buildUrlMapping() {
        this.urlMapping.clear();
        this.terms.forEach(term => {
            const slug = this.generateSlug(term.name);
            this.urlMapping.set(slug, term.id);
            // Also store the slug in the term object
            term.slug = slug;
        });
        
        console.log('üîó URL mapping built:', Array.from(this.urlMapping.keys()).slice(0, 5), '...');
    }
    
    // Handle direct links to terms
    handleDirectLink() {
        const hash = window.location.hash.substring(1); // Remove the #
        const currentSearch = window.location.search;
        
        // Check if URL has a term hash (e.g., /marketing-glossary#digital-activism)
        if (hash && this.urlMapping.has(hash)) {
            // Open term from URL hash
            setTimeout(() => this.openTermBySlug(hash), 500);
        } else {
            // Also check for ?term= parameter for backward compatibility
            const urlParams = new URLSearchParams(currentSearch);
            const termParam = urlParams.get('term');
            
            if (termParam && this.urlMapping.has(termParam)) {
                // Open term from URL parameter and update hash
                setTimeout(() => {
                    this.openTermBySlug(termParam);
                    window.location.hash = termParam;
                }, 500);
            }
        }
    }
    
    // Open term by its URL slug
    openTermBySlug(slug) {
        const termId = this.urlMapping.get(slug);
        if (termId) {
            this.showTermModal(termId);
        }
    }
    
    // Update URL when term is opened
    updateUrlForTerm(term) {
        const title = `${term.name} - Marketing Glossary`;
        
        // Update URL hash for this term
        window.location.hash = term.slug;
        
        // Update page title
        document.title = title;
    }
    
    // Reset URL when modal is closed
    resetUrl() {
        const title = 'Marketing Glossary';
        window.location.hash = '';
        document.title = title;
    }
    
    // Get the full URL for a term (for sharing/copying)
    getTermUrl(term) {
        const baseUrl = window.location.origin + this.baseUrl;
        return `${baseUrl}#${term.slug}`;
    }
}


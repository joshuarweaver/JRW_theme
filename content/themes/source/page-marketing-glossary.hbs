<script>
// Marketing Glossary Notion Integration
class MarketingGlossary {
    constructor() {
        this.config = window.GLOSSARY_CONFIG || {};
        this.terms = [];
        this.filteredTerms = [];
        this.displayedTerms = [];
        this.categories = new Set();
        this.currentPage = 0;

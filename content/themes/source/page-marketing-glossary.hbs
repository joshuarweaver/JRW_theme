// Utility functions for article linking
window.getGlossaryTermUrl = function(termName) {
    if (!window.glossary || !window.glossary.urlMapping) {
        console.warn('Glossary not initialized yet');
        return null;
    }
    
    const slug = window.glossary.generateSlug(termName);
    const baseUrl = window.location.origin + window.glossary.baseUrl;
    return `${baseUrl}#${slug}`;
};


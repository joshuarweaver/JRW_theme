{{!-- Table of Contents Component --}}
<div class="gh-toc-container">
    <div class="gh-toc-toggle">
        <button class="gh-toc-toggle-btn" aria-label="Toggle Table of Contents">
            <svg class="gh-toc-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
            <span class="gh-toc-text">Contents</span>
        </button>
    </div>
    
    <nav class="gh-toc-nav" role="navigation" aria-label="Table of Contents">
        <div class="gh-toc-header">
            <h3 class="gh-toc-title">Table of Contents</h3>
            <button class="gh-toc-close" aria-label="Close Table of Contents">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </button>
        </div>
        <ol class="gh-toc-list" id="toc-list">
            {{!-- TOC items will be dynamically generated by JavaScript --}}
        </ol>
        <div class="gh-toc-progress">
            <div class="gh-toc-progress-bar"></div>
        </div>
    </nav>
</div> 